<h1><%= @restaurant.name %></h1>
<% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
<% end %>

<h1>Create a review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
